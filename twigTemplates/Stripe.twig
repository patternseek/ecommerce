{% set formBody %}
<script
        src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="{{ state.apiPubKey }}"
        data-amount="{{ state.amount }}"
        data-name="{{ state.config.siteName }}"
        data-description="{{ state.description }}"
        data-currency="{{ state.config.currency }}"
        {{ state.emailHTML }}
        {{ state.labelHTML }}
        data-image="{{ state.config.siteLogo }}"
        >
</script>
{% endset %}
{{ this.exec.wrapForm( "submitForm", 'POST', formBody ) }}
